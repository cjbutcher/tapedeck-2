<h2 data-toggle="modal" data-target="#new-tape" class='right-align clickable'>
  <%= fa_icon 'plus' %>
</h2>

<div class="modal fade" id="new-tape">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Add a tape</h4>
      </div>
      <div class="modal-body">

        <%= form_for :spotify, url: search_spotify_index_path, remote: true do |f| %>
          <%= f.label :query %>
          <%= f.text_field :query %>
          <%= f.hidden_field :collection_id, value: @collection.id %>
          <div id='results'></div>
      </div>
      <div class="modal-footer">
          <%= f.submit class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
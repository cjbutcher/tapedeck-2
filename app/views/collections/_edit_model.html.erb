<h2 data-toggle="modal" data-target="#edit-collection" class='right-align clickable'>
  <%= fa_icon 'pencil' %>
</h2>

<div class="modal fade" id="edit-collection">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Edit collection settings</h4>
      </div>
      <div class="modal-body">
        <div class='form-group'>
          <%= form_for @collection, url: collection_path(@collection), method: :patch do |f| %>
            <%= f.text_field :title, class: "form-control", placeholder: 'Title', id: 'edit_collection_title' %>
            <div class='order-toggle'>
              <%= f.check_box :ordered, 'data-toggle' => 'toggle', 'data-on' => 'Yes', 'data-off' => 'No', 'data-onstyle' => 'success', 'data-offstyle' => 'danger' %>
              <%= f.label :ordered, "Order collection?", { class: "checkbox inline" } %>
            </div>
        </div>
      </div>
      <div class="modal-footer">
          <%= f.submit 'Update', class: "btn btn-primary update-collection-button" %>
        <% end %>
        <%= button_to 'Delete Collection', collection_path(@collection), method: :delete, class: 'btn btn-danger delete-collection-button' %>
      </div>
    </div>
  </div>
</div>

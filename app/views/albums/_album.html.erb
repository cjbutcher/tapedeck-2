<div class='album-wrapper col-centered col-xs-4 col-md-2'>
  <div class='album col-xs-12'>
    <% if collection.ordered? %>
      <h3 class='order'><%= album.position %></h3>
    <% end %>
    <%= link_to play_albums_path(album.spotify_id), remote: true do %>
      <img class="album img-thumbnail" src=<%= album.art %>>
    <% end %>
  </div>
</div>
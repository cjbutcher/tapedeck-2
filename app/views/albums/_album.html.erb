<div class='album-wrapper col-centered col-xs-4 col-md-2' id="album_<%= album.id %>">
  <div class='album col-xs-12'>
    <% if collection.ordered? %>
      <div class='order'>
        <h3><%= album.position %></h3>
      </div>
    <% end %>
      <div class='album-art'>
        <%= link_to play_albums_path(album.spotify_id), remote: true do %>
          <div class='album-overlay'>
            <div class='album-info'>
              <span class='album-name'><%= album.name %></span></br>
              <span class='album-artist'><%= album.artist %></span></br>
              <span class='album-year'><%= album.year %></span>
            </div>
          </div>
        <% end %>
        <div class='album-remove'>
          <%= link_to album_path(album.id), remote: true, method: :delete do %>
            <%= fa_icon 'times' %>
          <% end %>
        </div>
        <img class="img-thumbnail" src=<%= album.art %>>
      </div>
  </div>
</div>
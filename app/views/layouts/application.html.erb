<!DOCTYPE html>
<html>
  <head>
    <title>Tapedeck2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="player">
      <div id="player_info">
        <div id="player_song"></div>
        <div id="player_artist"></div>
        <div id="player_album"></div>
      </div>
      <div id="player_controls">
        <%= fa_icon 'step-backward', class: 'previous_button clickable' %>
        <%= fa_icon 'stop', class: 'stop_button clickable' %>
        <%= fa_icon 'step-forward', class: 'next_button clickable' %>
      </div>
    </div>

    <div id='jplayer1'>
    </div>

    <div id='jplayer2'>
    </div>

    <h4 data-toggle="modal" data-target="#new-collection" class='clickable'>
      <%= fa_icon 'bolt' %> Create
    </h4>

    <div class="modal fade" id="new-collection">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Modal title</h4>
          </div>
          <div class="modal-body">
            <%= form_for Collection.new, url: collections_path do |f| %>
              <%= f.label :title %>
              <%= f.text_field :title %>
          </div>
          <div class="modal-footer">
              <%= f.submit class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>
